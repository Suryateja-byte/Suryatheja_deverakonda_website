{
  "name": "portfolio",
  "private": true,
  "version": "1.0.0",
  "description": "Premium personal portfolio built with Vite, React, TypeScript, and Tailwind CSS.",
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev": "vite",
    "build": "npm run typecheck && vite build && npm run sitemap",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,css,md,json}\"",
    "extract": "node scripts/extract-resume.mjs",
    "sitemap": "node scripts/generate-sitemap.mjs"
  },
